{
  "name": "postboy",
  "productName": "postboy",
  "version": "0.0.10",
  "description": "A minimal PostBoy built with Electron for API testing",
  "main": "src/index.js",
  "homepage": "https://github.com/Ghost-xDsaroha/postboy",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghost-xDsaroha/postboy.git"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "build:dmg": "electron-builder --mac dmg",
    "build:all": "electron-builder --mac",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Gaurav Saroha",
    "email": "grvsaroha0610@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.1.7",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-wix": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/publisher-github": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5"
  },
  "build": {
    "appId": "com.GhostxD.postboy",
    "productName": "PostBoy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!src/assets/icons/png/**/*",
      "!src/assets/icons/win/**/*"
    ],
    "mac": {
      "icon": "src/assets/icons/mac/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "PostBoy ${version}",
      "icon": "src/assets/icons/mac/icon.icns",
      "background": "src/assets/thrbg.png",
      "window": {
        "width": 660,
        "height": 500
      },
      "contents": [
        {
          "x": 192,
          "y": 344,
          "type": "file"
        },
        {
          "x": 448,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
